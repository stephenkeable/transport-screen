<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title>Departures</title>
    <style>
      body {
        background-color: #000;
        font-size: 18px;
        color: #fff;
        font-family: sans-serif;
        display: grid;
        grid-template-columns: 1fr 1fr 1fr;
        grid-auto-flow: row;
        grid-auto-rows: 1fr;
        grid-gap: 15px;
        margin: 15px;
        padding: 0;
      }
      table {
        margin: 0;
        width:100%;
      }
      th {
        text-align:left;
      }
      tr.cancelled {
        color: #f00;
      }
      tr.late {
        color: #fb0;
      }
      td, th {
        padding: 5px 0;
      }
      section {
        grid-row: span 1;
        grid-column: span 1;
        min-height: 200px;
      }
      section.enfield-chase {
        grid-row: span 2;
        grid-column: span 1;
      }
      section h2 {
        margin: 0;
        padding: 0 0 15px 0;
      }
      .right {
        text-align: right;
      }
    </style>
    <meta http-equiv="refresh" content="300">
  </head>
  <body>
    {{#each stations }}
    <section class="{{ this.stationClass }}">
      <h2>{{ this.stationName }}</h2>
      <table>
        <tr>
          <th>Destination</th>
          <th class="right">Departure</th>
        </tr>
        {{#each this.departures }}
        <tr class="{{ this.status }}">
          <td>{{ this.destination }}</td>
          <td class="right">{{{ this.departureTime }}}</td>
        </tr>
        {{/each}}
      </table>
    </section>
    {{/each}}
  </body>
</html>
